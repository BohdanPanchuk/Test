@model Estafeta_TestTask.Models.User
@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Login failed. Check your login details.");

    <div class="form-control">
        <div class="form-group">
            <h4 class="col-md-offset-2">Login</h4>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.UserName, new { @class = "control-label col-md-2" } )
            @Html.TextBoxFor(u => u.UserName, new { @class = "col-md-10; form-control" } )
            @Html.ValidationMessageFor(u => u.UserName)
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Password, new { @class = "control-label col-md-2" } )
            @Html.PasswordFor(u => u.Password, new { @class = "col-md-10; form-control" } )
            @Html.ValidationMessageFor(u => u.Password)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.CheckBoxFor(u => u.RememberMe)
                @Html.LabelFor(u => u.RememberMe)
            </div>
        </div>

        <input type="submit" value="Log In" class="col-md-offset-2 col-md-10, btn btn-primary" />
    </div>
}